<h1>Prospects</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Website</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.company %></td>
        <td><%= listing.contact %></td>
        <td><%= listing.email %></td>
        <td><%= listing.telephone %></td>
        <td><%= listing.website %></td>
        <td><%= "Created by #{listing.user.name}" %></td>
        <td><%= link_to 'Show', listing, class: "btn btn-link" %></td>

        <% if (user_signed_in?) && (current_user == listing.user) %>
          <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
